<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encender" />

            <Space
                android:layout_width="5mm"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btapag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apagar" />

            <Space
                android:layout_width="5mm"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/btdis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispositivos" />

            <Space
                android:layout_width="5mm"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Spinner
                android:id="@+id/spdisp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="dispositivos" />

        </LinearLayout>

        <Button
            android:id="@+id/btcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conectar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Velocidad"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/sbv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="60dp"
                    android:max="100" />
            </LinearLayout>

            <Space
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DirecciÃ³n"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/sbd"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="60dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#A0A0A0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>